---
interface Props {
  href: string
  target?: string
  className?: string
}

let { target, className, ...props } = Astro.props
if (!target) {
  target = '_blank'
}
---

<a
  class:list={[
    '-m-0.5 rounded-sm p-0.5 text-nowrap underline underline-offset-2 !ring-neutral-400 transition hover:text-neutral-400 focus-visible:text-neutral-400 active:text-neutral-400',
    className
  ]}
  {...props}
  {target}
  rel="noopener"><slot /></a
>
